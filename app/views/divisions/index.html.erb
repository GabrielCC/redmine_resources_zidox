<h1>Listing divisions</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @divisions.each do |division| %>
  <tr>
    <td><%= division.name %></td>
    <td><%= link_to 'Show', division %></td>
    <td>
    <% if authorize_globally_for('divisions', 'edit') %>
      <%= link_to 'Edit', edit_division_path(division) %>
    <% end %>
    </td>
    <td>
      <% if authorize_globally_for('divisions', 'destroy') %>
        <%= link_to 'Destroy', division, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />
<% if authorize_globally_for('divisions', 'new') %>
  <%= link_to 'New Division', new_division_path %>
<% end %>